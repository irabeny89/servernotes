<div class='container-fluid'>
  <div class="row">
    <div class="col-12">
      {{#if note}}<h3>{{ note.title }}</h3>{{/if}}
      {{#if note}}<p>{{ note.body }}</p>{{/if}}
      <p>Key: {{ notekey }}</p>
    </div>
  </div>
  {{#if notekey }}
  <div class='row'>
    <div class="col-12">
      <div class="btn-group">
        <a class="btn btn-outline-danger" href="/notes/destroy?key={{notekey}}"
          role="button">
          Delete
        </a>
        <a class="btn btn-outline-primary" href="/notes/edit?key={{notekey}}"
          role="button">
          Edit
        </a>
      </div>
    </div>
  </div>
  {{/if}}
</div>